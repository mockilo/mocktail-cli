{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Complex Schema with Formats",
  "type": "object",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "birthDate": {
          "type": "string",
          "format": "date"
        },
        "lastLogin": {
          "type": "string",
          "format": "date-time"
        },
        "profilePicture": {
          "type": "string",
          "format": "uri"
        },
        "bio": {
          "type": "string",
          "maxLength": 500
        },
        "isActive": {
          "type": "boolean"
        },
        "age": {
          "type": "integer",
          "minimum": 0,
          "maximum": 150
        },
        "salary": {
          "type": "number",
          "minimum": 0
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["id", "email", "name", "firstName", "lastName"]
    },
    "Post": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "content": {
          "type": "string"
        },
        "publishedAt": {
          "type": "string",
          "format": "date-time"
        },
        "authorId": {
          "type": "string",
          "format": "uuid"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "viewCount": {
          "type": "integer",
          "minimum": 0
        },
        "isPublished": {
          "type": "boolean"
        }
      },
      "required": ["id", "title", "content", "authorId"]
    },
    "Comment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "content": {
          "type": "string",
          "minLength": 1
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "authorId": {
          "type": "string",
          "format": "uuid"
        },
        "postId": {
          "type": "string",
          "format": "uuid"
        },
        "parentId": {
          "type": "string",
          "format": "uuid"
        }
      },
      "required": ["id", "content", "createdAt", "authorId", "postId"]
    }
  },
  "properties": {
    "users": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/User"
      }
    },
    "posts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Post"
      }
    },
    "comments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Comment"
      }
    }
  }
}
